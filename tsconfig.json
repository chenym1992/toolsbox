{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,

    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
